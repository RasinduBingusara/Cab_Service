<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>org.megacity.cab_service.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signupController</servlet-name>
        <servlet-class>org.megacity.cab_service.controller.SignupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signupController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>vehicleController</servlet-name>
        <servlet-class>org.megacity.cab_service.controller.VehicleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>vehicleController</servlet-name>
        <url-pattern>/vehicles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>modelController</servlet-name>
        <servlet-class>org.megacity.cab_service.controller.VehicleModelController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modelController</servlet-name>
        <url-pattern>/add-model</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>driverController</servlet-name>
        <servlet-class>org.megacity.cab_service.controller.DriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>driverController</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookingController</servlet-name>
        <servlet-class>org.megacity.cab_service.controller.BookingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookingController</servlet-name>
        <url-pattern>/bookings</url-pattern>
    </servlet-mapping>

</web-app>